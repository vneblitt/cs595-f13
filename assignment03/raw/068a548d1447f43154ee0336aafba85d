<script type="text/javascript">



    function Subscribe() {
        if (typeof (Page_ClientValidate) == 'function') {
            Page_ClientValidate('subscribe');
        }
        if (Page_IsValid) {
            // do something
            Page_ClientValidate('emailValidate');
            //ShowAvailability();
        }
        if (Page_IsValid) {
            // do something            
            ShowAvailability();
        }
        else {
            OnChange(this);
        }

    }

    function ShowAvailability() {
        $.ajax({
            type: "POST",
            url: "WebMethods.aspx/CheckEmail",
            data: '{usermail: "' + $("#mainContent_subs_email")[0].value + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: RegStatus,
            failure: function(response) {
                alert(response);
            }
        });
    }
    function RegisterUser() {
        $.ajax({
            type: "POST",
            url: "WebMethods.aspx/RegisterSubscriber",
            data: '{mailstring: "' + $("#mainContent_subs_email")[0].value + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: RegStatus,
            failure: function(response) {
                alert(response);
            }
        });
    }

    function RegStatus(response) {
        var mesg = $("#mesg")[0];

        switch (response.d) {
            case "true":
                RegisterUser();
                break;
            case "added":
                mesg.style.color = "green";
                mesg.innerHTML = "<div class='error_img'><img src='images/email_add.png' alt='Subscription Success' /></div> Subscription Success";
                break;
            case "notadded":
                mesg.style.color = "red";
                mesg.innerHTML = "<div class='error_img'><img src='images/exclamation-red.png' alt='Error Adding Email' /></div> Error Adding Email";
                break;
            case "false":
                mesg.style.color = "red";
                mesg.innerHTML = "<div class='error_img'><img src='images/exclamation-red.png' alt='Email Already Registered' /></div> Email Already Registered";
                break;
            case "error":
                mesg.style.color = "red";
                mesg.innerHTML = "<div class='error_img'><img src='images/exclamation-red.png' alt='Error occured' /></div> Error occured";
                break;
        }
    }
    function OnChange(txt) {
        $("#mesg")[0].innerHTML = "";
    }
       </script>

</html>
