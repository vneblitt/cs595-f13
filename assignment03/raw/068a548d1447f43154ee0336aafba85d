    function clearSubscribe() {
        document.getElementById('mainContent_subs_email').value = ""
    }
    function resetSubscribe() {
        if (document.getElementById('mainContent_subs_email').value == "")
            document.getElementById('mainContent_subs_email').value = "Susbcribe to email alerts"
