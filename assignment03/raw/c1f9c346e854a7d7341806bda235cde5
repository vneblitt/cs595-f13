<script type="text/javascript">
$(document).ready(function() {
	// set current tab in nth-child (1-6)
	$('ul#gc-tabs li:nth-child(6) a').click();
	
	// preventing click on disabled tabs
	$('ul#gc-tabs li.tab-disabled').click(function(event){
		// alert("clicked");
		event.preventDefault(); //stop default browser behaviour
	});
	
	// start ptotgallery on click on the day tab
	$("#gc-tabs li a").click(function(){
		var whichtab = ( $("#gc-tabs li a").index(this) );
		$('.panes > div:nth-child(whichtab+1) > div' ).scrollable({circular: true}).navigator().autoscroll({interval: 5000});
	})

	// start initial gallery (1=preconf, 2=day 1, 3= day 2 etc)
	$(".scrollable").scrollable({circular: true}).navigator().autoscroll({interval: 5000});
	
	// how many galleries
	$('.gc-photogallery-nav .navi').each(function(){
		// find the width of the navi based on number of navi items
		var nwidth = ( parseInt(((($(this).children().length)*19)-9)/2));
		// width of gallery container = 520px, 1/2 = 260px
		var marginl = 260 - nwidth
		$(this).css('margin-left', marginl+'px');
	})
	
	$("#content a[rel]").overlay({ expose: '#000', effect: 'apple' });

});


</script>

