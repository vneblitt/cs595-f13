    <script>
    var _S;
    document.write("<style>#slideshow {display: none;}</style>"); //leave whole show visible for non-javascript enabled browsers
    $(document).ready(function() {
        var slides = [];
        $("#slideshow .slide").each(function(i,slide){
            slides.push(slide);
            $(slide).css("display","none");
        });
        _S = new Slideshow(slides);
        $("#slideshow").css("display","block");
        _S.start();
    });

    function Slideshow(slides){

        this.imageRoot = "/disarmament/content/slideshow/hibakusha/images/";

        this.navRegular = this.imageRoot + "buttons/blue.gif";
        this.navSelected = this.imageRoot + "buttons/white.gif";
        this.navHighlight = this.imageRoot + "buttons/lightblue.gif";

        this.slides = slides;
        this.currentIndex = 0;

        this.timerOn    = true;
        this.timerWait  = 19000;

        this.buildNav = function(selected){

            var s = "";
            for (i = 0; i < this.slides.length; i++){
                var src = this.navRegular;
                var mo = " onmouseover='this.src=_S.navHighlight;' onmouseout='this.src=_S.navRegular;' onclick='_S.showSlide(" + i +")' ";
                if (i == selected){
                    src = this.navSelected;
                    mo = "";
                }
                s = s + "<img src='" + src + "'" + mo + "/>";
            }
            return s;
        }

        for (i in this.slides){
            slide = $(this.slides[i]);
            slide.find(".slide_navigation").html(this.buildNav(i));
            slide.mouseover(function(){_S.timerOn = false;});
            slide.mouseout(function(){_S.timerOn = true;});
        }

        this.showSlide = function(index){
            $(this.slides[this.currentIndex]).css("display","none");
            this.currentIndex = index;
            $(this.slides[this.currentIndex]).fadeIn("fast");
        }

        this.nextSlide = function(){
            index = this.currentIndex + 1;
            if (index == this.slides.length){
                index = 0;
            }
            this.showSlide(index);
        }

        this.runTimer = function(){
            if (this.timerOn)   {
                this.nextSlide();
            }
            window.setTimeout("_S.runTimer()", this.timerWait);
        }

        this.start = function(){
            this.showSlide(this.currentIndex);
            window.setTimeout("_S.runTimer()", this.timerWait);
        }
    }

    </script>
