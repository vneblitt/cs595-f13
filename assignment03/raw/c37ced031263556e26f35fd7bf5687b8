<script>
	//this code will remove any items from the Update list that are already linked in the SPOTLIGHT
	var spotlinks = [];
	chop = "http://www.un.org".length
	
	$("#spotlight a").each(function(){
		href = $(this).attr("href");
		if (href.indexOf("http://www.un.org/disarmament/update") != -1){
			spotlinks.push(href.substring(chop));
		}
	});
	$("#updateList li").each(function(){
		href = $(this).children("a").attr("href");
		linkExists = ($.inArray(href,spotlinks) != -1);
		if (linkExists) {
			$(this).hide();
		}
	});
</script>
