<script>
var _C;

NUMBER_OF_EVENTS = 6;

function Calendar(events){
	this.events = events;
	this.populateCurrentEvents = function(){
		var forDisplay = [];
		var today = new Date();
		for(i in events){
			var e = events[i];
		//	log(events[i].end);
			if ((new Date(e.start)) > today) {
				forDisplay.push(e);
			}
			if (forDisplay.length >= NUMBER_OF_EVENTS){
				break;
			}
		}
		this.showEvents(forDisplay);
	}
	
	this.showEvents = function(dEvents) {
		var html = "";
		for(i in dEvents){
			var e = dEvents[i];
			var s = new Date(e.start);
			var f = new Date(e.end);
			var date = this.months[s.getMonth()] + "<br><span>" + s.getDate() + "</span>";
			if (f != s && false){ //turned this off
				date = date + "<br>&mdash;</br>";
				date = date + this.months[f.getMonth()] + "<br>";
				date = date + "<span>" + f.getDate() + "</span>";
			} //
			var dateRange = this.longMonths[s.getMonth()] + " " + s.getDate()

			if (e.end && !((f.getMonth() == s.getMonth()) && (f.getDate() == s.getDate()))){		
				dateRange = dateRange + " &mdash; ";
				if (f.getMonth() != s.getMonth()){
					dateRange = dateRange + this.longMonths[f.getMonth()] + " ";
				}
				dateRange = dateRange + " " + f.getDate();
			}
			var title = e.title;
			if (e.url) {
				title = "<a href='" + e.url + "'>" + title + "</a>";	
			}
			var html = html + '<div class="eventItem"><div class="eventDate">' +
						date + '</div>' + 
						'<div class="eventInfo">' +  title + 
						'<div class="eventLocation">' + e.location + '</div>' + 
						'<div class="eventDateRange">' + dateRange + '</div>' +
						'</div></div>';
		}
		$('#events').html(html);
	}
	this.months = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];
	this.longMonths = ["January","February","March","April","May","June","July","August","September","October","November","December"];
}

$(document).ready(function() {
	$.ajax({
		url: '/disarmament/HomePage/calendar/calendar.xml?version=1',
		dataType: 'xml',
		data: {
		},
		success: function(doc) {
			var events = [];
	
			$(doc).find('event').each(function() {
				events.push({
					start: $(this).find('start').text(),
					end: $(this).find('end').text(),
                	location: $(this).find('location').text(),
                	title: $(this).find('title').text(),
                	url: $(this).find('url').text()
				});
			});
			_C = new Calendar(events);
			_C.populateCurrentEvents();
		}
	});
});
</script>
