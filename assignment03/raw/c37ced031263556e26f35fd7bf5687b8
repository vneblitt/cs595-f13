   <script>

	jQuery(function($) {
		$('a[href$=".jpg"]').attr('target', '_blank');
		$('a[href$=".pdf"]').attr('target', '_blank');
	
		$('a[href^="http://"]').filter(function() {
			return this.hostname && this.hostname !== location.hostname;
		}).attr('target', '_blank'); 
		$('a[href^="https://"]').filter(function() {
			return this.hostname && this.hostname !== location.hostname;
		}).attr('target', '_blank'); 	
	}); 

</script>

