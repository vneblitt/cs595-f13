//<![CDATA[

  $('.element-subscribe').mouseover(function () {
    $(this).addClass("highlighted");
  });
  $('.element-subscribe').mouseout(function () {
    if (!$("#subscribe input").is(":focus")) {
      $('.element-subscribe').removeClass("highlighted");
    }
  });
  $("#subscribe input").focus(function() {
    $(".element-subscribe").addClass("highlighted");
    $(".element-subscribe").addClass("active");
    $(this).val("");
  });

  $("#subscribe input").blur(function() {
    $(".element-subscribe").removeClass("highlighted");
    $(".element-subscribe").removeClass("active");
    $(this).val("Subscribe");
  });

//]]>
</script>
