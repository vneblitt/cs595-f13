	<!-- fccmp tracking cookie -->
	<script type="text/javascript">
	(function(){
		// look for fccmp parameter in the querystring
		// fccmp can only be alphanumeric, which makes this very easy
		var o = new RegExp("[\\?&]fccmp=[\\w]+");
		var fccmp = o.exec(window.location.href);
		// exec returns null if there are no matches
		if (fccmp) {
			// if fccmp is not null, then there has to be one element in fccmp
			// and we only care about the first one we find
			fccmp = fccmp[0];
			// likewise if fccmp is not null
			// then there has to be a '=' and it can't be the last char
			fccmp = fccmp.substr(fccmp.indexOf("=") + 1);
		} else if (!$.cookie('fccmp')){
			fccmp = "_blog";
		} else {
			return;
		}

		// this cookie will expire in 90 days
		var expires = new Date();
		expires.setDate(expires.getDate() + 90);
		//If there's an existing cookie, we want to preserve its value
		var fccmpExisting = $.cookie('fccmp') ? $.cookie('fccmp') + escape(",") : "";
		// set the cookie
		// it's important to set the domain to ".fogcreek.com"
		// which makes this cookie visible to all fogcreek.com sites
		$.cookie('fccmp', fccmpExisting + escape(fccmp), {domain: '.fogcreek.com', path: '/', expires: expires.toGMTString()});
	}());
	</script>

