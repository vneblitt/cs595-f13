		<script>
$(function() {
    $(".project_updates_button").bind("click", function() {
        $(".story_wrapper").hide();
        $(".update_wrapper").fadeIn();
        $(".tab.active").removeClass("active");
        $(this).find(".tab").addClass("active");
    });
    $(".project_story_button").bind("click", function() {
        $(".story_wrapper").hide();
        $(".story_wrapper:first").fadeIn();
        $(".tab.active").removeClass("active");
        $(this).find(".tab").addClass("active");
    });

    $(".close_modal").bind("click", function() {
        $.fancybox.close();
    });

    $.is_mobile = function() { return false; };
    project_page.campaign_id = 3926;
    project_page.facebook_backed = false;
    project_page.twitter_backed = false;
    project_page.tumblr_backed = false;
    project_page.total_backers = 1643;
    project_page.total_reach = 2419536;
    project_page.time_left = 'Complete!';
    project_page.goal = 500;
    project_page.progress = 328;
    project_page.time_progress = 138.366486550389;
    
    project_page.facebook_link_copy = "Support on Facebook";
    project_page.twitter_link_copy = "Support on Twitter";

    project_page.init();

    $(".follow_user").bind("click", function(e) {
        e.preventDefault();

        if ($("#email").val() != "") {
            Thunderclap.send({
                url: $(this).attr("href"),
                success: function(data) {
                    if (data.success) {
                        if (data.following == true) {
                            $(".follow_user .update_button.follow").hide();
                            $(".follow_user .update_button.following").show();
                            project_page.following = true;
                        }
                        else {
                            $(".follow_user .update_button.following").hide();
                            $(".follow_user .update_button.follow").show();
                            project_page.following = false;
                        }
                    }
                }
            });
        }
        else {
            $.fancybox("#modal_update", {
                closeBtn : false,
                padding: 0
            });
        }
    });

    $("#email_save_form").keypress(function(e) {
        if (e.keyCode == 13 && !e.shiftKey) {
            e.preventDefault();
            $(".email_save").click();
        }
    });

    $("#email_save_form_outer").keypress(function(e) {
        if (e.keyCode == 13 && !e.shiftKey) {
            e.preventDefault();
            $(".email_save_outer").click();
        }
    });

    $(".email_save").bind("click", function(e) {
        e.preventDefault();
        var payload = $("#email_save_form").serialize();

        Thunderclap.send({
            url: $("#email_save_form").attr("action"),
            type: $("#email_save_form").attr("method"),
            data: payload,
            button: $(".email_save"),
            success: function(data) {
                if (data.success) {
                    // $.fancybox.close();
                    $(project_page.openModal).hide();
                    project_page.openModal = $('#support_confirmed');
                    $(project_page.openModal).slideLeft(project_page.animationOptions);

                    Thunderclap.send({
                        url: $(".follow_user").attr("href"),
                        success: function(data) {
                            if (data.success) {
                                if (data.following == true) {
                                    $(".follow_user .update_button.follow").hide();
                                    $(".follow_user .update_button.following").show();
                                    project_page.following = true;
                                }
                                else {
                                    $(".follow_user .update_button.following").hide();
                                    $(".follow_user .update_button.follow").show();
                                    project_page.following = false;
                                }
                            }
                        }
                    });
                }
                else {
                    alert("Invalid email address")
                }
            },
            fail: function() {
                Thunderclap.error("failed to save email")
            }
        });
    });

    $(".email_save_outer").bind("click", function(e) {
        e.preventDefault();
        var payload = $("#email_save_form_outer").serialize();

        Thunderclap.send({
            url: $("#email_save_form_outer").attr("action"),
            type: $("#email_save_form_outer").attr("method"),
            data: payload,
            button: $(".email_save"),
            success: function(data) {
                if (data.success) {
                    $.fancybox.close();
                    $("#email").val($("#email_outer").val())
                    $(".follow_user").click();
                }
                else {
                    alert("Invalid email address")
                }
            },
            fail: function() {
                Thunderclap.error("failed to save email")
            }
        });
    });

    if ($.url_param("l") == "updates") {
        $(window).load(function() {
            $(".project_updates_button").click();
            $("html, body").animate({
                scrollTop: $(".project_updates_button:first").offset().top
            }, "slow");
        });
    }
});

