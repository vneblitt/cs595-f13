<script type="text/javascript">
    //ads processing
    if (HuffPoUtil.WEDGJE.ad_renders && HuffPoUtil.WEDGJE.ad_renders.length)
    {
        for (var i=0; i<HuffPoUtil.WEDGJE.ad_renders.length; i++)
        {
            HuffPoUtil.WEDGJE.ad_renders[i]();
        }
    }
</script>

