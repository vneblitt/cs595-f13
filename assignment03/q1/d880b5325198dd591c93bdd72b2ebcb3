                <div class="subColumns vsTitle"> <a name="top" id="top"></a>
                  <div class="lefty col60l">
                    <div style="max-width:200px; max-height:70px"> <img src="/VitalSigns/images/VitalSigns_logo-300px.jpg" alt="CDC Vital Signs" title="CDC Vital Signs" style="width:100%; " /> </div>
                    <div class="lefty2">
                      <h5>October 2011</h5>
                      <h2 id="topicTitle" style="font-size:2.5em">Drinking and Driving:</h2>
                      <h3 id="subtopicTitle">A Threat to Everyone</h3>
                    </div>
                  </div>
                  
                  <!--ON THIS PAGE -->
                  <div id="onthispage">
                    <div class="rounders grey bulleted-links">
                      <div class="inner">
                        <div class="t"></div>
                        <h4>On this Page</h4>
                        <div class="subc">
                          <ul class="mobileOnThisPage">
                            <li><a href="#Introduction">Introduction</a></li>
                            <li><a href="#Problem">Problem</a></li>
                            <li><a href="#Whatcanbedone">What Can Be Done</a></li>
                            <li><a href="#Science">Science Behind this Issue</a></li>
                            <li class="hideMobile"><a href="#RelatedLinks">Related Links</a></li>
                            <li class="hideMobile"><a href="/VitalSigns/SocialMedia.html">Social Media</a></li>
