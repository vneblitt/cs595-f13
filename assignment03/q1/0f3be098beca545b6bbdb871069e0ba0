				$('#searchbutton').click();
				}
			});
		
			$('#searchbutton').click(function () {
				if ( $('#search_tb').is(':checked')) {	
					if ( $('#string').val() != "") { 
						$('#query').val($('#string').val()) 
					}
				}

				/* This breaks on live for some reason.
				if ( $('#search_tb').is(':checked')) {	
					if ( $('#string').val() != "") { 
						var MyString = $('#string').val().replace(/\s/g,"* ") + '*';
						$('#query').val(MyString) 
					}
				}*/
				else if ( $('#search_local').is(':checked')) {	
					$('#query').attr('name', 'q')
					$('#contenttypes').remove()
					$('#searchform').attr('action', 'http://local.toledoblade.com/search.pg')
					if ( $('#string').val() != "") { 
						$('#query').val($('#string').val()) 
					}
				}
						
				$('#searchform').submit();
			});
		});
