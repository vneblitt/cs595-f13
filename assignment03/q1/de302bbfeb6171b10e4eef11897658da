  $('.inarticle-image').mouseenter( function() {offset = $(this).offset(); $('.inarticle-image-share').animate({top: offset.top - $('#header').height()  - $('#article-sections-menu-cont').height() + ($(this).height() * 0.3)}, 0).fadeIn(50);}).mouseleave (function () {$('.inarticle-image-share').hide()});
  $('#article-container iframe').mouseenter( function() {offset = $(this).offset(); $('.inarticle-image-share').animate({top: offset.top - $('#header').height() - $('#article-sections-menu-cont').height() + ($(this).height() * 0.3)}, 0).show()}).mouseleave (function () {$('.inarticle-image-share').hide()});
  $('#article-container object').mouseenter( function() {offset = $(this).offset(); $('.inarticle-image-share').animate({top: offset.top - $('#header').height()  - $('#article-sections-menu-cont').height() + ($(this).height() * 0.3)}, 0).show();}).mouseleave (function () {$('.inarticle-image-share').hide()});
  $('.article-photo-container').mouseenter( function() {offset = $(this).offset(); $('.inarticle-image-share').animate({top: offset.top - $('#header').height()  - $('#article-sections-menu-cont').height() + ($(this).height() * 0.25)}, 0).show();}).mouseleave (function () {$('.inarticle-image-share').hide()});
  $('.inarticle-image-share').hover( function(){ $(this).show();});
  
