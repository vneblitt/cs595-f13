<script>

function submitCommentForm()
{
	if (!$('#message-box').val()){
	alert("Please enter your comment before submitting");
	return false;
	}
	else {
    $('.article-reply-btn').attr('disabled', true);
    $('.spinner').show();
    $('#comment_form_id').submit();
    }
    
    
}
$('#message-box,.reply-box').removeAttr('disabled');
</script>
