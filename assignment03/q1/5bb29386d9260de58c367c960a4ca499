<script>
	function subscribeUserNewsletter(email, newsletter) {
	    // clear previous error/success messages
	    $('.subscribe_error').text("");
	    // validat)e email address
	    if (!email || email.toLowerCase() == "enter your email address" || !validateEmail(email)) {
	        $('.subscribe_error').text("Please enter a valid e-mail address.");
	    } else {
	        $('.subscribe_error').text("submitting request...");
	        var rand = Math.floor(Math.random()*1111111111);
	        var url = "/subscribe_user?email="+email+"&newsletter=tds&r="+rand;
	        $.post(url,"",subscribe_status,"text");
	    }
	    return false;
	}
	
	function checkDOB(dob) {
	    var reg = /^([0-9]{0,2})+\/([0-9]{0,2})+\/([0-9]{4})$/;
	    var dateofbirth = dob;
	    return reg.test(dateofbirth);
	}
	
	function checkAge(month,day,year){
        year = parseInt(year);
        month = parseInt(month) - 1;
        day = parseInt(day);
        
        var min_age = 18;       /* the minumum age you want to allow in */
        var theirDate = new Date((year + min_age), month, day);
        var today = new Date;
    
        if ((today.getTime() - theirDate.getTime()) < 0) {
            return false;
        } else {
            return true;
        }
    }
	
function subscribe_status(responseText, textStatus, XMLHttpRequest){

		var page_name = 'unset',

		page_name = mtvn.btg.reporting.ReportingManager.getData().pageName ? mtvn.btg.reporting.ReportingManager.getData().pageName : 'not-reported';

		if (responseText.indexOf("OK") > -1){
			$(".subscribe_error").text("Thanks for subscribing!");
			mtvn.btg.Controller.sendLinkEvent ({
                linkName:'thedailyshow_newsletter', 
                linkType:'o',
                eVar19:'dailyshow_newsletter_signup_success', 
                events:'event8',
								eVar9:page_name
            });
			} else if (responseText.indexOf("AGE") > -1) {
					$(".subscribe_error").text("You are not eligible to sign up at this time")
			} else {
					$(".subscribe_error").text("There was a problem, please try again");
			}
    }
</script>






	

					



 
 
 
 
 

