<script>
$(document).ready(function() {
	var bgcolorlist=new Array("#f6981d","#eb2929","#e53465","#ed6b23","#f05d22","#ef512b","#cdad2c","#7f973b","#69cada","#3bb9d6","#2780a4","#92a5bb","#9ebbbe");
	$(".ccLogoBarOuter").css("background", bgcolorlist[Math.floor(Math.random()*bgcolorlist.length)]);

	//DO I HAVE A FB/TW COOKIE, IF NOT, SET ONE
	
	fb_c = getCookie('cc_last_fb_visit');
	if(fb_c==""){
		setCookie("cc_last_fb_visit","1380546782",365);
	}
	tw_c= getCookie('cc_last_tw_visit');
	if(tw_c==""){
		setCookie("cc_last_tw_visit","1380546782",365);
	}
	

	//DISPLAY THE PROMOBOX WHEN IT'S A 728X90
		var ad_height = $("#pushdown").height();
				
		if(ad_height>89){
			$(".promoBox").show();
		}	
			
		 });

function displayFaceBook(){
	$(".faceBookIframe").show();
	$(".followUsFaceBookHolder").addClass( "FBhover" );
	$(".facebookNumber").fadeOut('slow');
	setCookie("cc_last_fb_visit","1380546782",365);
}

function hideFaceBook(){
	$(".faceBookIframe").hide();
	$(".followUsFaceBookHolder").removeClass( "FBhover" );
}

function displayTwitter(){
	$(".twitterFrame").show();
	$(".followUsTwitterHolder").addClass( "twitterHover" );
	$(".twitterNumber").fadeOut('slow');
	setCookie("cc_last_tw_visit","1380546782",365);
}

function hideTwitter(){
	$(".twitterFrame").hide();
	$(".followUsTwitterHolder").removeClass( "twitterHover" );
}
</script>				
												
