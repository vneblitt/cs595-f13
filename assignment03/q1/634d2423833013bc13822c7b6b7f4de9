oint Partners LLC" /><meta property="article:tag" content="EMC Mortgage" /><meta property="article:tag" content="American Mortgage Network" /><meta property="article:tag" content="Ranieri Partners" /><meta property="article:tag" content="Yale Street Mortgage" /><meta property="article:tag" content="Sterling Partners" /><meta property="article:tag" content="Carrington Holding Co." /><meta property="article:tag" content="American General Finance" /><meta property="article:tag" content="PennyMac Financial Services" /><meta property="article:tag" content="LendSure Financial Services" /><meta property="article:tag" content="BNC Mortgage" /><meta property="article:tag" content="Westwood Capital LLC" /><meta property="article:tag" content="Bexil American Mortgage" /><meta property="article:tag" content="New Penn Financial" /><meta property="article:tag" content="New Century" /><meta property="article:tag" content="Prospect Mortgage" /><meta property="article:tag" content="Resurgent Capital Services" /><meta property="article:tag" content="Rushmore Loan Management Services" /><meta property="article:tag" content="PennyMac" /><meta property="article:tag" content="Wilmington Finance" /><meta property="article:tag" content="subprime subsidiaries" /><meta property="article:tag" content="government-controlled mortgage giants" /><meta property="article:tag" content="post-crisis employers" /><meta property="article:tag" content="mortgage finance process" /><meta property="article:tag" content="government-sponsored mortgage finance giant" /><meta property="article:tag" content="responsible lender" /><meta property="article:tag" content="University of Maryland’s Robert H. Smith School of Business" /><meta property="article:tag" content="Inernal Revenue Service" /><meta property="article:tag" content="correspondent lending head" /><meta property="article:tag" content="real estate finance professor" /><meta property="article:tag" content="office supervisor" /><meta property="article:t