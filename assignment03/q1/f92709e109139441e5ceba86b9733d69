      function checkSuntimesCounter(data){
        var payWallCountSuntimes = data['count'];

        if( $.cookie('mg2PayWallCntr') != null && payWallCountSuntimes != 0 && $.cookie('mg2ParentCheck') == null ){
          if( payWallCountSuntimes > $.cookie('mg2PayWallCntr') ){
            var now = new Date();
            var expiresDate = new Date();

