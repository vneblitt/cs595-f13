<script type="text/javascript" src="http://journalistsresource.org/wp-content/themes/JournalistResource/scripts/jquery.autofill-1.0.min.js"></script>
<!--[if IE]>
<script type="text/javascript">
  $(document).ready(function() {  
    $('#nav-menu-container li').hover(
      function(){
        $(this).addClass("over");
      },
      function(){
        $(this).removeClass("over");                    
      } 
    );
  });
