<script type="text/javascript">
  $(document).ready(function() {  
    // animation for hover on browse pages (archive/search) 
    var $jrBrowsRel="", $jrBrowsRev="";
    $('div.post-list h4 a.invert').hover(function(){
      $jrBrowsRel = $(this);
      $jrBrowsRev = $('#list-images div.column').find('a[rev~='+$jrBrowsRel.attr('rel')+']');
      $jrBrowsRev.css('background-color','#6699cc');  
    }, function(){
      $jrBrowsRev.css('background-color', '#ffffff');      
    });
    
    
    // browse keyword searchbox and hidden tags field
    var $browseKeyword = $('#browse-keyword-field'),
        $browseTag = $('#browse-tag-field');

    if ($browseTag.val()) {
      // move hidden tags field value to the keyword search field
      var existingKeywords = $browseKeyword.val();
      if (existingKeywords.length) existingKeywords = ' ' + existingKeywords;
      $browseKeyword.val('tag:' + $browseTag.val() + existingKeywords);
      $browseTag.val('');
    }

    $browseTag.parent().submit(function(){
      // on submit, move tags identified by 'tag:' over to hidden tags field
      var keywords = $browseKeyword.val().split(' '),
          tags = '';
      if ($browseKeyword.val().length > 2 && $browseKeyword.val() != 'keyword (optional)') {
        $browseKeyword.css('background-color', '#336699').animate({opacity: 0.4}, 700);            
      }
      $browseKeyword.val($browseKeyword.val().replace(/tag:[^\s]*/ig, ''));
      for (k in keywords) {
        if (keywords[k].indexOf('tag:') >=0) {
          tags = keywords[k].replace(/tag:/, '');
        }
      }
      $browseTag.val(tags);
    });

    // autocomplete tags and make sure to prepend with 'tag:'
    // ( /wp-content/themes/JournalistResource/ajax/tags.php does a simple query to return related tags)    
    $browseKeyword.suggest("http://journalistsresource.org/wp-content/themes/JournalistResource/ajax/tags.php", { 
      delay: 100, 
      minchars: 2, 
      timeout:10000, 
      onSelect: function(){$(this).val('tag:' + $(this).val())}  
    });

    // autofill in absence of keyword
    if (!$browseKeyword.val()) {
    	$browseKeyword.autofill({
    		value: 'keyword (optional)'
    	});
    	$('#browse-form').submit(function(e){
    	  if ($browseKeyword.val() == 'keyword (optional)') {
    	    $browseKeyword.val('');
    	  }
    	});      
    }
    
    // tabbed content for posts
    $('#content_tab_menu a').click(
      function(){
        $('#content_tab_menu a').removeClass('current');
        $('.content_tab').removeClass('current-tab');
        var rel = '#' + $(this).attr('rel');
        $(rel).addClass('current-tab');
        $(this).addClass('current');
      } 
    );  
    
	$("ul.menu li#studies").click(function(){
		$("ul.menu li#studies div#mega-drop").hide();
	});
		
  });
</script> 
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-5985794-2']);
  _gaq.push(['_trackPageview']);

