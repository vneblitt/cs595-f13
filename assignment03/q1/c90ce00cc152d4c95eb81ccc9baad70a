	<script type="text/javascript">
		// dynamic primaryMenu spacer width
		var totCount = 0; 
		var countLis = 3;
		$('.sf-menu li').not('.sf-menu li.spacer').not('.sf-menu li ul li').each(function(index) {
			totCount += $(this).innerWidth();
			countLis += 1;
		});
		var spacerWidth = (1003-totCount)-(parseInt(countLis)*1);
		$('.sf-menu li.spacer').width(spacerWidth);		
	</script>
  


