		$('#print').click(function () {
			self.print();
		});
		
		//email
		$('#email').click(function(e) {
			//Cancel the link behavior
			e.preventDefault();
			
			//Get the A tag
			//var id = $(this).attr('href');
			var id = "#emailbox";
		
			//Get the screen height and width
			var maskHeight = $(document).height();
			var maskWidth = $(window).width();
		
			//Set heigth and width to mask to fill up the whole screen
			$('#mask').css({'width':maskWidth,'height':maskHeight});
			
			//transition effect		
			$('#mask').fadeIn(1000);	
			$('#mask').fadeTo("slow",0.8);	
			$('.player').hide();
			//$('#videoplayer').hide();
		
			//Get the window height and width
			var winH = $(window).height();
			var winW = $(window).width();
              	
			//Set the popup window to center
			$(id).css('top',  winH/2-$(id).height()/2);
			$(id).css('left', winW/2-$(id).width()/2);
		
			//transition effect
			$(id).fadeIn(2000); 
			
			$('#emailSubject').val($('#subject').text());
			$('#error_msg').text("");
			//Recaptcha.reload();
			
			Recaptcha.create("6LfoBb4SAAAAAD8uN7Kk9CkoQHz-w-nrNW2jJ9wY",
    			"recaptcha",
    			{
      			theme: "white",
      			lang: "en",
      			callback: Recaptcha.focus_response_field
    			}
  			);
		
		});
		
		//if close button is clicked
		$('.window #close').click(function (e) {
			//Cancel the link behavior
			e.preventDefault();
			
			$('#mask').hide();
			$('.window').hide();
			
			$('.player').show();
			//$('#videoplayer').show();
		});		
		
		//if mask is clicked
		$('#mask').click(function () {
			$(this).hide();
			$('.window').hide();
			$('.player').show();
			//$('#videoplayer').show();
		});
		
		//if sendMail button is clicked
		$('#sendEmail').click(function (){
			var emailTo = $('#emailTo').val();
			var name = $('#name').val();
			var emailFrom = $('#emailFrom').val();
			var subject = $('#subject').text();
			var l = "http://www.ilo.org/dhaka/Informationresources/Publicinformation/Pressreleases/WCMS_220950/lang--en/index.htm";
			var message = "<p>" + name + " ";
			    message+= "saw this story on the ILO website and thought you should see it.</p>";
			    message+= "<p>" + subject + "<br />";
			    message+= "&lt;&nbsp;" + "<a href='"+l+"'>"+l+"</a>&nbsp;&gt;</p>";
			subject = "ILO Email:" + subject;
			$.getJSON("http://jsonip.appspot.com?callback=?",function(d){
    			var ip = d.ip;
    			var recaptcha_challenge_field = $('#recaptcha_challenge_field').val();
				var recaptcha_response_field = $('#recaptcha_response_field').val();
				
				
				console.log("result..");
				
				console.log("clientIP:" + ip);
						console.log("recaptcha_challenge_field:"+ recaptcha_challenge_field);
								console.log("recaptcha_response_field:"+ recaptcha_response_field);
								console.log("Message:" + message);
				console.log(emailTo+",,,,,,name="+name+",,,,,,emailFrom="+emailFrom+",,,,subject="+subject);
				
				$.get("/dhaka/idcplg?IdcService=SEND_EMAIL",{ "clientIP":ip,"recaptcha_challenge_field":recaptcha_challenge_field,"recaptcha_response_field":recaptcha_response_field,"emailTo" : emailTo,"name":name,"emailFrom":emailFrom,"subject":subject,"acmeMessage":message,"IsJson":1 }, function (data) {
					console.log("MailStatus:"+data.LocalData.MailStatus);
					
					console.log("recaptchaVerified"+data.LocalData.recaptchaVerified);
					if(data.LocalData.MailStatus=="true"){
      					$('#mask').hide();
						$('.window').hide();
						$('.player').show();
						//$('#videoplayer').show();
					}
					else{
						Recaptcha.reload();
						if(data.LocalData.recaptchaVerified==0){
							$('#error_msg').text("failed. please type the two words separated with space.");
						}
						else{
							$('#error_msg').text("failed. please check the email address(s).");
						}
					}
				});
			});
		});
	});
