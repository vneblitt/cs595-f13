<script src="//dwoq5s27enw2w.cloudfront.net/4992202/js/jquery.tools.overlay.min.js"></script>
<script>

  
  
    function update_comment()
{
    var target = $(this);
    var max_length = Number(target.attr("max_length"))
    var body = target.val();
    if (body.length > max_length) {
        body = body.substring(0, max_length)
        target.val(body);
    }
    var remain = max_length - body.length;
    $('#comment_remaining').html(remain);
}

function more_comments(last_ts, last_count)
{
  $.get("/words/comments/22124/"+last_ts, {'last_count': last_count}, 
    function(data,status) {
      $('#load-more-comments').remove();
      $('#comments-container').append(data);
      $('.section.main').equalHeights();
    }
  );
  return false;
}

function submit_comment() {
  var comment_body = $('#comment_body').val()
  if (!comment_body) 
    return false;
  var params = { 'comment': comment_body };
  if (submit_comment.reply_to_id)
    params.reply_to = submit_comment.reply_to_id
  $.post('/words/post_comment/22124',params)

  $('#top_level_post_comment').hide()
  $('#comment-form-holder').remove()
  $('#comment-null-reply-holder').html('Your comment has been submitted.')
}
submit_comment.reply_to_id = null;

function reply_comment(parent_id) {

  if (! $('#comment_body').is(':visible') ) {
    window.location = '/visitor/login'
    return false;
  }

  parent_id = parent_id || null
  if (parent_id)
    $('#top_level_post_comment').show()
  else
    $('#top_level_post_comment').hide()
  submit_comment.reply_to_id = parent_id
  var formholder = $('#comment-form-holder')
  $('#comment-'+parent_id+'-reply-holder').append( formholder.clone().show() )
  formholder.remove()
  $('#comment_body').focus()
  return false;
}

function flag_comment(target, comment_id) {
  var parent_span = $(target).parents('span.flag')
  if (parent_span.hasClass("flagged")) {
    return false;
  }

  var overlay = $('#flag-confirm');
  var contents = overlay.children('.content');
  contents.html("Are you sure you want to flag this comment?");

  if (flag_comment.overlay == null) {
    overlay.overlay({
      top: "center",
      load: true
    });
    flag_comment.overlay = overlay.data("overlay");
  }
  else {
    flag_comment.overlay.load();
  }

  var continue_btn = overlay.find('.continue');
  continue_btn.unbind('click');
  continue_btn.click(function() {
    flag_comment.overlay.close();
    do_the_flag(parent_span, comment_id);
  })

  return false;
}
flag_comment.overlay = null;

function do_the_flag(parent_span, comment_id)
{
  var overlay = $('#flag-status');
  var contents = overlay.children('.content');
  contents.html("&nbsp;");
  $.ajax({
    url: "/words/flag_comment/"+comment_id+"/",
    data: {},
    complete: function(xhr,status) {
        if (status == "error") {
          contents.html( $('#flag-login').html() )
          $('#flag-status .buttons .login').show();
        }
        else if (status == "success") {
          contents.html(xhr.responseText);
          parent_span.addClass("flagged");
          parent_span.find('a').html('Flagged');
        }
        if (do_the_flag.overlay == null) {
          overlay.overlay({
            top: "center",
            closeOnClick: true,
            load: true
          })
          do_the_flag.overlay = overlay.data("overlay");
        }
        else {
          do_the_flag.overlay.load()
        }

    }
  });
}
do_the_flag.overlay = null;


  
  

</script>

