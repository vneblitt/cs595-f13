                function setNewPlaylistOnLoad(incomingDuration, incomingFile, incomingTitle, incomingImage) {

			incomingTitle = base64_decode(incomingTitle);

                        // invalidate
                        // var currentlyActiveItem = document.getElementById('active_playlist_item');
                        // currentlyActiveItem.id = '';

                        // invalidate
                        var container2_playlistNodes = document.getElementById('container2_playlist').childNodes;

                        for (var x=0; x < container2_playlistNodes.length; x++) {
                                var childNode = document.getElementById('container2_playlist').childNodes[x];
                                childNode.className = 'playlist_item';
                        }


                        // create new playlist item
                        var parentDiv = document.createElement('div');
                        var randomId = Math.floor((100000)*Math.random()) + 2;
                        parentDiv.setAttribute('onclick', 'playFromPlaylist(' + randomId + ',' + incomingDuration + ', \'' + incomingFile + '\')');
                        parentDiv.setAttribute('className', 'active_playlist_item');
                        parentDiv.setAttribute('class', 'active_playlist_item');
                        // set as active
                        parentDiv.setAttribute('id', 'playlist_item_' + randomId) ;

                        var childImgImg = document.createElement('img');
                        childImgImg.setAttribute('src', incomingImage);
                        parentDiv.appendChild(childImgImg);

                        var childDiv = document.createElement('div');
                        childDiv.setAttribute('className', 'playlist_item_meta');
                        childDiv.setAttribute('class', 'playlist_item_meta');
                        parentDiv.appendChild(childDiv);

                        var childTitleDiv = document.createElement('div');
                        childTitleDiv.setAttribute('className', 'playlist_item_title');
                        childTitleDiv.setAttribute('class', 'playlist_item_title');
                        childTitleDiv.appendChild(document.createTextNode(incomingTitle));
                        childDiv.appendChild(childTitleDiv);

                        var childDownload = document.createElement('div');
                        childDownload.setAttribute('onclick', 'disableEventPropagation(event)');
                        childDownload.setAttribute('className', 'playlist_item_download');
                        childDownload.setAttribute('class', 'playlist_item_download');
                        childDiv.appendChild(childDownload);

                        var childDownloadA = document.createElement('a');
                        if (getCookie('s')) {
                                childDownloadA.setAttribute('href', incomingFile + '?save');
                        } else {
                                childDownloadA.setAttribute('href', '/accounts/login.html');
                        }
                        var childDownloadLinkText = document.createTextNode('Download');
                        childDownloadA.appendChild(childDownloadLinkText);

                        childDownload.appendChild(childDownloadA);

                        document.getElementById('container2_playlist').appendChild(parentDiv);

                        // move scroll bar to bottom
                        var objDiv = document.getElementById('container2_playlist');
                        objDiv.scrollTop = objDiv.scrollHeight;

                        //
                        var playlistItem = { duration: incomingDuration, file: incomingFile, title: incomingTitle, description: '', image: incomingImage };

                        jwplayer().onReady(

                                function(event) {

                                        var currentPlaylistItemArray = jwplayer().getPlaylist();
                                        currentPlaylistItemArray.unshift(playlistItem);
                                        jwplayer().load(currentPlaylistItemArray);

                                }

                        );

                }


                function playFromPlaylist(incomingId, incomingDuration, incomingFile) {

                        // invalidate
                        // set all children of container2_playlist to playlist_item
                        // var currentlyActiveItem = document.getElementsByClassName('active_playlist_item')[0];
                        var container2_playlistNodes = document.getElementById('container2_playlist').childNodes;

                        for (var x=0; x < container2_playlistNodes.length; x++) {
                                var childNode = document.getElementById('container2_playlist').childNodes[x];
                                childNode.className = 'playlist_item';
                        }

                        // currentlyActiveItem.className = 'playlist_item';

                        // activate
                        var currentlyActiveItem = document.getElementById('playlist_item_' + incomingId);
                        currentlyActiveItem.className = 'active_playlist_item';

                        var currentPlaylistItemArray = jwplayer().getPlaylist();
                        var playlistItem = { duration: incomingDuration, file: incomingFile, title: '', description: '', image: '' };
                        currentPlaylistItemArray.unshift(playlistItem);
                        jwplayer().load(currentPlaylistItemArray);
                        jwplayer().play();
                }

		function disableEventPropagation(event) {

			if (event.stopPropagation) {
				// this code is for Mozilla and Opera
				event.stopPropagation();
			} else if (window.event) {
				// this code is for IE
				window.event.cancelBubble = true;
			}

		}

		function base64_decode (data) {
		    // Decodes string using MIME base64 algorithm  

		    var b64 = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/=";
		    var o1, o2, o3, h1, h2, h3, h4, bits, i = 0,
			ac = 0,
			dec = "",
			tmp_arr = [];

		    if (!data) {
			return data;
		    }

		    data += '';

		    do { // unpack four hexets into three octets using index points in b64
			h1 = b64.indexOf(data.charAt(i++));
			h2 = b64.indexOf(data.charAt(i++));
			h3 = b64.indexOf(data.charAt(i++));
			h4 = b64.indexOf(data.charAt(i++));

			bits = h1 << 18 | h2 << 12 | h3 << 6 | h4;

			o1 = bits >> 16 & 0xff;
			o2 = bits >> 8 & 0xff;
			o3 = bits & 0xff;

			if (h3 == 64) {
			    tmp_arr[ac++] = String.fromCharCode(o1);
			} else if (h4 == 64) {
			    tmp_arr[ac++] = String.fromCharCode(o1, o2);
			} else {
			    tmp_arr[ac++] = String.fromCharCode(o1, o2, o3);
			}
		    } while (i < data.length);

		    dec = tmp_arr.join('');
		    dec = this.utf8_decode(dec);

		    return dec;
		}

		function utf8_decode (str_data) {
		    // Converts a UTF-8 encoded string to ISO-8859-1  

		    var tmp_arr = [],
			i = 0,
			ac = 0,
			c1 = 0,
			c2 = 0,
			c3 = 0;

		    str_data += '';

		    while (i < str_data.length) {
			c1 = str_data.charCodeAt(i);
			if (c1 < 128) {
			    tmp_arr[ac++] = String.fromCharCode(c1);
			    i++;
			} else if (c1 > 191 && c1 < 224) {
			    c2 = str_data.charCodeAt(i + 1);
			    tmp_arr[ac++] = String.fromCharCode(((c1 & 31) << 6) | (c2 & 63));
			    i += 2;
			} else {
			    c2 = str_data.charCodeAt(i + 1);
			    c3 = str_data.charCodeAt(i + 2);
			    tmp_arr[ac++] = String.fromCharCode(((c1 & 15) << 12) | ((c2 & 63) << 6) | (c3 & 63));
			    i += 3;
			}
		    }

		    return tmp_arr.join('');
		}		


-->
        </script>

        <meta name="date" content="2013-09-10 12:33:58" />
        <meta name="dc.date" content="2013-09-10 12:33:58" />


	<!-- /added by eric -->

</head>

