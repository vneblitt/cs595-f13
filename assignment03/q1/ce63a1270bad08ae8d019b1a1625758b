$('iframe.embed').load(function() {
    var highest = 0;
    var hi=0;
    $(this).contents().find("div").each(function(){
      var h = $(this).height();
      if(h > hi){
         hi = h;
         highest = $(this);  
      }    
    });
    this.style.height = highest.height() + 'px';
});
